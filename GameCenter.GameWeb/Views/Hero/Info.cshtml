@model GameCenter.Entity.Data.GameImages
 
<div class="ling-banner">
    <div class="ling-type">资料站 <span class="sub-ling-type">> <a href="/Hero/List">英雄介绍</a></span><span class="sub-ling-type">> @Model.Name</span></div>
</div>
<div class="ling-content">
    <div class="main hero-detail">
        <img src="@GameCenter.Core.Common.Domain.GetImage(Model.ImagePath)" style="height: 500px; width: 1000px" class="hero-detail-img">
        <p class="hero-desc">
            @Html.Raw(Model.Info)
        </p>
    </div>
</div>
