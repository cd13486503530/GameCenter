@model GameCenter.Entity.Dto.DtoPrivatePage
@using GameCenter.Core.Service;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var gamesList = GameService.GetGamesCache();
    var chaneelList = ChannelService.GetListALL();
}

<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> 修改隐私</h2>
</div>

<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            <!-- START VALIDATIONENGINE PLUGIN -->
            <div class="panel panel-default">
                <div class="panel-body">
                    <form id="validate" method="post" class="form-horizontal" action="/Private/EditForm" enctype="multipart/form-data">
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="form-group">
                            <label class="col-md-2 control-label">渠道名称:</label>
                            <div class="col-md-3">
                                <select name="Channel" class="form-control select">
                                    @foreach (var item in chaneelList)
                                    {
                                        if (item.Id == Model.Channel)
                                        {
                                            <option value="@item.Id" selected="selected"> @item.Name</option>
                                        }
                                        else if (item.Id == 0)
                                        {
                                            <option value="0">无渠道</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select> 
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">游戏名称:</label>
                            <div class="col-md-9">
                                <select name="GameId" class="validate[required]" id="form-validation-field-4">
                                    @foreach (var item in gamesList)
                                    {
                                        if (item.Id == Model.GameId)
                                        {
                                            <option value="@item.Id" selected="selected"> @item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id"> @item.Name</option>
                                        }
                                    }
                                </select>
                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">背景图片</label>
                            <div class="col-md-10">
                                <a class="file-input-wrapper btn btn-default  fileinput btn-danger">
                                    <input type="file" class="fileinput btn-danger" name="Filedata" id="form-validation-field-3" data-filename-placement="inside" title="@(string.IsNullOrEmpty(Model.ImagePath)? "选择背景图片" :Model.ImagePath)" />
                                </a>
                                <span class="help-block"></span>
                                <input type="hidden" name="ImagePath" value="@Model.ImagePath" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Android链接:</label>
                            <div class="col-md-6">
                                <input type="text" name="AndroidUrl" class="form-control" value="@Model.AndroidUrl"/>
                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Ios链接:</label>
                            <div class="col-md-6">
                                <input type="text" name="IosUrl" class="form-control" value="@Model.IosUrl"/>
                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">官方微信:</label>
                            <div class="col-md-4">
                                <input name="Weixin" id="Weixin" class="form-control" value="@Model.Weixin" />
                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">官方QQ:</label>
                            <div class="col-md-4">
                                <input name="QQ" id="QQ" class="form-control" value="@Model.QQ" />
                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">三要素Title:</label>
                            <div class="col-md-9">
                                <input type="text" name="Title" class="form-control" value="@Model.Title">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">三要素Keywords:</label>
                            <div class="col-md-9">
                                <input type="text" name="Keywords" class="form-control" value="@Model.Keywords">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">三要素Description:</label>
                            <div class="col-md-9">
                                <input type="text" name="Description" class="form-control" value="@Model.Description">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">统计代码1:</label>
                            <div class="col-md-9">
                                <textarea name="CodeFirst" class="form-control" rows="5">@Model.CodeFirst</textarea>
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">统计代码2:</label>
                            <div class="col-md-9">
                                <textarea name="CodeSecond" class="form-control" rows="5">@Model.CodeSecond</textarea>
                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="btn-group pull-right">
                            <button class="btn btn-primary" type="button" onclick="$('#validate').validationEngine('hide');">隐藏提示</button>
                            <button class="btn btn-primary" type="submit" id="gameSubmit">确认提交</button>
                            <span class="help-block"></span>
                        </div>

                    </form>

                </div>
            </div>
            <!-- END VALIDATIONENGINE PLUGIN -->

        </div>
    </div>
</div>
<div class="message-box message-box-danger animated fadeIn" data-sound="fail" id="message-box-sound-2">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title"><span class="fa fa-times"></span> <p>错误提示!</p></div>
            <div class="mb-footer">
                <button class="btn btn-default btn-lg pull-right mb-control-close">关闭</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type='text/javascript' src='/Scripts/plugins/validationengine/languages/jquery.validationEngine-zh_CN.js'></script>
    <script type='text/javascript' src='/Scripts/plugins/validationengine/jquery.validationEngine.js'></script>
    <script type="text/javascript" src="~/Scripts/plugins/jqueryform/jquery.form.js"></script>
    <script type="text/javascript" src="/Scripts/plugins/bootstrap/bootstrap-select.js"></script>
    <link href="~/Scripts/plugins/umeditor/themes/default/default.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/plugins/umeditor/kindeditor-min.js"></script>
    <script type="text/javascript" src="~/Scripts/plugins/umeditor/lang/zh_CN.js"></script>
    <script type='text/javascript' src='/Scripts/plugins/jquery-validation/jquery.validate.js'></script>
    <script type="text/javascript" src="/Scripts/plugins/bootstrap/bootstrap-file-input.js"></script>
    <script type="text/javascript" src="~/Scripts/plugins/jqueryform/jquery.form.js"></script>
    <script type="text/javascript">

        $('#validate').ajaxForm({
            url: '/Private/EditForm',
            type: "POST",
            dataType: "json",
            success: function (data) {
                if (data.status) {
                    window.location.href = "/Private/List";
                } else {
                    $('#message-box-sound-2 .fa-times').next().html('');
                    $('#message-box-sound-2 .fa-times').next().html(data.error);
                    $('#message-box-sound-2').addClass('open')
                }
            }
        });
    </script>
}




