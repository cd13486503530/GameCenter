
@{
    ViewBag.Title = "AddChoose";
}

<div class="modal animated fadeIn in" id="modal_change_photo" tabindex="-1" role="dialog" aria-labelledby="smallModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="cp_crop" method="get" action="/Menu/Add">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="smallModalHead">选择菜单类型</h4>
                </div>
                <div class="modal-body">
                    <div class="text-center" id="cp_target">请选择下面需要添加的菜单类型</div>
                </div>
                <div class="modal-body form-horizontal form-group-separated">
                    <div class="form-group">
                        <label class="col-md-4 control-label">类型</label>
                        <div class="col-md-4 col-xs-12">
                            <select class="form-control select" name="GameId" id="GameId">
                                <option value="0">首页菜单</option>
                                @foreach (var item in ViewBag.Games)
                                {
                                    <option value="@item.Id">@item.Name 菜单</option>
                                }
                            </select>
                            <span class="help-block"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="cp_accept">确定</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="/Scripts/plugins/bootstrap/bootstrap-select.js"></script>
    <script type="text/javascript">
        $("#modal_change_photo").modal("show");
    </script>
}
